:root {
    transition-duration: 0s;
    transition-timing-function: ease-in-elastic;
}

.button-blue {
    font-size: 45px;
    color: rgb(255, 255, 255);
    background-color: rgb(73, 101, 192);
    flex-direction: column;
    align-items: stretch;
    justify-content: flex-start;
    align-self: flex-start;
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    border-top-left-radius: 50px;
    border-top-right-radius: 50px;
    border-bottom-right-radius: 50px;
    border-bottom-left-radius: 50px;
    background-size: 100% 100%;
    -unity-text-align: middle-center;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
    padding-top: 0;
    padding-right: 0;
    padding-bottom: 0;
    padding-left: 0;
    width: 100%;
    height: 100px;
    -unity-font-definition: url("project://database/Assets/Fonts/Orbitron-VariableFont_wght%20SDF.asset?fileID=11400000&guid=75dba3b030a9eed40b2511542e50c2bf&type=2#Orbitron-VariableFont_wght SDF");
    -unity-font-style: bold;
    transition-duration: 0s;
    transition-timing-function: ease;
}

.button-blue:hover {
    scale: 1.04 1.04;
    color: rgb(255, 255, 255);
    background-color: rgb(42, 86, 178);
    transition-duration: 0.1s;
    transition-timing-function: ease;
}

.button-blue:active {
    background-color: rgb(127, 148, 212);
    transition-timing-function: ease-in;
    transition-duration: 0.01s;
    scale: 1 1;
}
